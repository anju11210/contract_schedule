<%= form_with(model:[question, comment], url: admin_comments_path(id: question.id), method: :post, local: false) do |f| %>
  <div id="comments-error">
    <%= render 'layouts/error_messages', model: f.object %>
  </div>
  <%= f.text_area :body, rows:'5',placeholder: "回答を入力", class: "w-100" %>
  <%= f.submit "送信", class:"btn btn-outline-primary btn-block mb-1" %>
<% end %>

