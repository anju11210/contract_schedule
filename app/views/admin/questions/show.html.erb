<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class='col-md-3'>
      <h2 style="padding:20px;">コメント</h2>
      <% if @comment.errors.any? %>
        <%= @comment.errors.count %>件のエラーが発生しました
        <ul>
          <% @comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with(model:[@question, @comment], url: admin_comments_path(id: @question.id), method: :post, local: true) do |f| %>
        <%= f.text_area :body, rows:'5',placeholder: "コメントを入力", class: "w-100" %>
        <%= f.submit "送信", class:"btn btn-outline-primary btn-block mb-1" %>
      <% end %>
    </div>
    <div class = "col-md-8 offset-md-1">
      <%= render 'admin/questions/question_show', question: @question %>
    </div>
  </div>
</div>