<div class = "col-md-8 offset-md-1">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10 mt-5">
      <h2>スケジュール</h2>
      <div class="text-right mb-2">
        <%= link_to "アポイント新規登録", new_admin_customer_appointment_path(@customer), class:"btn btn-outline-primary" %>
      </div>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th colspan = "1">日時</th>
            <th colspan = "2">手続き名</th>
            <th colspan = "3">場所</th>
            <th colspan = "1"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% appointments.each do |appointment| %>
            <td colspan = "1">
              <%= appointment.date %>
              <%= appointment.time %>
            </td>
            <td colspan = "2"><%= appointment.name %></td>
            <td colspan = "3"><%= appointment.place_name %></td>
            <td colspan = "1"><%= link_to "詳細", admin_customer_appointment_path(customer.id, appointment.id) %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>