<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10 mt-5">
      <h2>買主一覧</h2>
      <div class="text-right mb-2">
        <%= link_to "新規登録", new_admin_customer_path, class:"btn btn-outline-primary" %>
      </div>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th colspan = "1">登録日</th>
            <th colspan = "2">氏名</th>
            <th colspan = "3">電話番号</th>
            <th colspan = "3">取引物件</th>
            <th colspan = "2"><!--進捗ステータス表示--></th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @customers.each do |customer| %>
            <td><%= customer.created_at.strftime("%Y/%m/%d") %></td>
            <td><%= customer.last_name + customer.first_name %></td>
            <td><%= customer.phone_number %></td>
            <td><%# 物件名 %></td>
            <td><%= customer.status %></td>
          <% end %>
          <td>
            <%# link_to "スケジュール一覧", admin_customer_appointments_path(@customer) %>
          </td>
          </tr>
        </tbody>
      </table>
      <%# paginate @items %>
    </div>
  </div>
</div>