<div class="container px-5 px-sm-0">
  <div class="row">
    <div class='col-md-8 offset-md-1' style="padding: 20px;">
      <h2 style="padding:20px; text-align:center;">買主一覧</h2>
      <div class="d-flex justify-content-center p-3">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th style="text-align:center">登録日</th>
              <th style="text-align:center">氏名</th>
              <th style="text-align:center">電話番号</th>
              <th style="text-align:center">退会状況</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
            <tr>
              <td></td>
              <td style="text-align:center"><%= customer.created_at.strftime("%Y/%m/%d") %></td>
              <td style="text-align:center"><%= customer.last_name + customer.first_name %></td>
              <td style="text-align:center"><%= customer.phone_number %></td>
              <td style="text-align:center"><%= customer_active(customer).html_safe %></td>
              <td><%= link_to "スケジュール一覧", admin_customer_appointments_path(customer.id) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="d-flex justify-content-center p-3">
        <%= paginate @customers %>
      </div>
    </div>
  </div>
</div>
