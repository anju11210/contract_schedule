<table class="table table-borderless table-hover">
  <tbody>
    <tr>
      <th>氏名</th>
      <td></td>
      <td><%= customer.last_name %><%= customer.first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td></td>
      <td><%= customer.last_name_kana %><%= customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td></td>
      <td><%= customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td></td>
      <td><%= customer.phone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td></td>
      <td><%= customer.email %></td>
    </tr>
    <% if admin_signed_in? %>
	    <tr>
	      <th>退会状況</th>
	      <td></td>
	      <td><%= customer.active_text %></td>
	    </tr>
    <% end %>
    <tr>
      <th>進捗</th>
      <td></td>
      <td><%= customer.ja_status %></td>
    </tr>
  </tbody>
</table>