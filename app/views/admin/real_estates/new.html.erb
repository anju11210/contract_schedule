<div class="container mt-5 mb-5">
  <div class="row my-3">
    <div class='col-sm-8 px-sm-0 offset-sm-1'>
      <h2>【登録】物件情報</h2>
      <% if @real_estate.errors.any? %>
        <%= @real_estate.errors.count %>件のエラーが発生しました
        <ul>
          <% @real_estate.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
  <%= form_with model: @real_estate, url: admin_real_estates_path  do |f| %>
  <%= f.hidden_field :customer_id, value: @customer.id %>
    <div class="row form-group">
      <div class="col-2 offset-md-1"><%= f.label "物件名" %></div>
      <div class="col-1 text-right pr-0"></div>
      <div class="col-1"><%= f.text_field :name, :size => "70", placeholder: "（例）XXX町XX丁目戸建て・XXXマンションXX号室" %></div>
    </div>

    <div class="row form-group">
      <div class="col-3 offset-md-1"><%= f.label "所在地" %></div>
      <div class="col-3"><%= f.text_field :address, :size => "50", placeholder: "都道府県名から入力" %></div>
    </div>

    <div class="row form-group">
      <div class="col-3 offset-md-1"><%= f.label "成約価格" %></div>
      <div class="col-3"><%= f.text_field :price, :size => "10" %>万円</div>
    </div>

    <div class="row form-group">
      <div class="col-2 offset-md-1 mt-3 mb-5">
        <%= link_to "戻る", admin_customer_appointments_path(@customer), class: "btn btn-outline-dark" %>
      </div>
      <div class="col-2 offset-md-1 mt-3 mb-5">
        <%= f.submit "新規登録", class:"btn btn-outline-primary btn-block mb-1" %>
      </div>
    </div>
  <% end %>
</div>