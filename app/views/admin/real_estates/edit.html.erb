<div class="container mt-5 mb-5">
  <div class="row my-3">
    <div class='col-sm-8 px-sm-0 offset-sm-1'>
      <h2>【編集】物件情報</h2>
    </div>
  </div>
  <%# form_with model: [:admin, @real_estate] do |f| %>
  <div class="row form-group">
    <div class="col-2 offset-md-1"><%= f.label "物件名" %></div>
    <div class="col-1 text-right pr-0"></div>
    <div class="col-3"><%= f.text_field :name %></div>
  </div>

  <div class="row form-group">
    <div class="col-2 offset-md-1"><%= f.label "所在地" %></div>
    <div class="col-1 text-right pr-0"></div>
    <div class="col-1"><%= f.text_field :address %></div>
  </div>

  <div class="row form-group">
    <div class="col-3 offset-md-1"><%= f.label "成約価格" %></div>
    <div class="col-3"><%= f.text_field :price %></div>万円
  </div>

  <div class="row form-group">
    <div class="col-2 offset-md-1 mt-3 mb-5">
      <%# link_to "戻る", スケジュール一覧画面パス, class: "btn btn-outline-dark" %>
    </div>
    <div class="col-2 offset-md-1 mt-3 mb-5">
      <%# f.submit "更新", class:"btn btn-outline-primary btn-block mb-1" %>
    </div>
  </div>
  <%# end %>
</div>