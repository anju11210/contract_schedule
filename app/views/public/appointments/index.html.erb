<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'admin/real_estates/real_estate_info' %>

    <%# render 'public/questions/question_new' %>

    <div class="col-md-1"></div>
    <div class="col-md-10 mt-5">
      <h2>スケジュール</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th colspan = "1">日時</th>
            <th colspan = "2">手続き名</th>
            <th colspan = "3">場所</th>
            <th colspan = "5"></th>
          </tr>
        </thead>
        <tbody>
          <% @appointments.each do |appointment| %>
          <tr>
            <td>
              <%= appointment.date %>
              <%= appointment.time %>
            </td>
            <td><%= appointment.name %></td>
            <td><%= appointment.place_name %></td>
          <% end %>
            <td><%# link_to "詳細", appointment_path(appointment.id) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>