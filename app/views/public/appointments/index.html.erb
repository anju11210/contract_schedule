<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class='col-md-3'>
      <h2 style="padding:20px;">取引物件</h2>
      <%= render 'admin/real_estates/real_estate_info', real_estate: @real_estate %>
      <h2 style="padding:10px;">ご意見・ご質問</h2>
      <%#= render 'public/questions/question_new', question: @question %>

      <%= form_with model: @question, url: questions_path do |f| %>
        <div class="form-group">
          <%= f.label "件名" %>
          <%= f.text_field :title, :size => "30" %>
        </div>
        <div class="form-group">
          <%= f.label "本文" %>
          <%= f.text_area :body, class:'form-control book_body' %>
        </div>
        <div class="form-group">
          <%= f.submit "送信", class:"btn btn-outline-primary" %>
        </div>
      <% end %>

    </div>
    <div class = "col-md-8 offset-md-1">
      <h2 style="padding:20px;">スケジュール</h2>
      <%= render 'admin/appointments/appointments_index', appointments: @appointments, customer: @customer %>
    </div>
  </div>
</div>