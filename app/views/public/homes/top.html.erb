<div class="container p-5">
  <div class="row p-3">
    <div class='mx-auto'>
      <%= flash[:notice] %>
      <div class="d-flex justify-content-center p-3">
        <h1><strong>Contract Schedule</strong></h1>
      </div>
      <div class="btn-wrapper col-10 mx-auto">
        <div class="row" style="padding: 20px;" >
          <% if admin_signed_in? %>
            <%= link_to 'スケジュールを管理する', admin_root_path, class: "btn btn-outline-primary btn-block mb-3" %>
          <% elsif customer_signed_in? %>
            <%= link_to 'スケジュールを確認する', customer_appointments_path(@customer), class: "btn btn-outline-primary btn-block mb-3" %>
          <% else %>
            <%= link_to 'スケジュールを確認する', new_customer_session_path, class: "btn btn-outline-primary btn-block mb-3" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
